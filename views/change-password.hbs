<div class="login-page sidebar-collapse">
    <!-- Navbar -->
    {{>header}}
    <!-- End Navbar -->
    <div class="page-header clear-filter" filter-color="orange">
        <div class="page-header-image"
             style="background-image:url('/images/kristopher-roller-PC_lbSSxCZE-unsplash.jpg')"></div>
            {{#if hasErrors}}
            <div class="alert alert-warning" style="margin-bottom: -130px; margin-top:80px;" role="alert">
                {{# each messages_e}}
                <div class="container">
                    <div class="alert-icon">
                        &tridot;
                    </div>

                    {{this}}                    
                    <script>
                        swal("Password not changed!", "{{this}}!", "error");
                    </script>
                    <button type="button" class="close" style="line-height: 1;" data-dismiss="alert"
                            aria-label="Close">
                              <span aria-hidden="true">
                                  &times;
                              </span>
                    </button>
                </div>
                {{/each}}
            </div>
            {{/if }}
            {{#if hasSuccess}}
            <div class="alert alert-success" style="margin-bottom: -130px; margin-top:80px;" role="alert">
                {{# each messages_s}}
                <div class="container">
                    <div class="alert-icon">
                        &tridot;
                    </div>
                    {{this}}
                    <script>
                        swal("Password changed!", " {{this}}!", "success");
                    </script>
                    <button type="button" class="close" style="line-height: 1;" data-dismiss="alert"
                            aria-label="Close">
                              <span aria-hidden="true">
                                  &times;
                              </span>
                    </button>
                </div>
                {{/each}}
            </div>
            {{/if }}
            
        <div class="content" style="margin-top: 10%;">
            <div class="container">
                <div class="row">
                    <div class="card card-signup" data-background-color="orange">
                        <form class="form" action="/users/change-password" method="POST">
                            <div class="card-header text-center">
                                <h3 class="card-title title-up">Change Password</h3>
                            </div>
                            <div class="card-body">
                                <div class="input-group no-border">
                                    <div class="input-group-prepend">
                                      <span class="input-group-text">
                                            <i class="fa fa-star" aria-hidden="true"></i>
                                      </span>
                                    </div>
                                    <input type="password" id="password" name="password" class="form-control"
                                           placeholder="Password..." required>
                                </div>
                                <div class="input-group no-border">
                                    <div class="input-group-prepend">
                                      <span class="input-group-text">
                                            <i class="fa fa-star" aria-hidden="true"></i>
                                      </span>
                                    </div>
                                    <input type="password" id="new_password" name="new_password" class="form-control"
                                           placeholder="New Password..." required>
                                </div>
                                <div class="input-group no-border">
                                    <div class="input-group-prepend">
                                      <span class="input-group-text">
                                            <i class="fa fa-star" aria-hidden="true"></i>
                                      </span>
                                    </div>
                                    <input type="password" id="confirm_password" name="confirm_password"
                                           onchange="checkPassword(this.value)" class="form-control cp"
                                           placeholder="Retype Password..." required>
                                </div>
                            </div>
                            <div class="card-footer text-center">
                                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                                <button type="submit" class="btn btn-neutral btn-round btn-lg">Change <i
                                        class="fa fa-arrow-right" aria-hidden="true"></i></button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{>footer}}

</div>
</div>