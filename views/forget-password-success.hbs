<div class="login-page sidebar-collapse">
    <!-- Navbar -->
    {{>header}}
    <!-- End Navbar -->
    <div class="page-header clear-filter" filter-color="orange">
        <div class="page-header-image"
             style="background-image:url('/images/kristopher-roller-PC_lbSSxCZE-unsplash.jpg')"></div>
            <div class="alert alert-success" style="margin-bottom: -130px; margin-top:80px;" role="alert">
                <div class="container">
                    <div class="alert-icon">
                        &tridot;
                    </div>
                    Password Reset successfully
                    <button type="button" class="close" style="line-height: 1;" data-dismiss="alert"
                            aria-label="Close">
                              <span aria-hidden="true">
                                  &times;
                              </span>
                    </button>
                </div>
            </div>
        <div class="content" style="margin-top: 10%;">
            <div class="container">
                <div class="row">
                    <div class="card card-signup" data-background-color="orange">
                        {{#if hasErrors}}
                            <div class="alert alert-danger" style="margin-bottom: -50px;" role="alert">
                                {{# each messages}}
                                    <div class="container">
                                        <div class="alert-icon">
                                            &tridot;
                                            <!--                                            <i class="now-ui-icons objects_support-17"></i>-->
                                        </div>
                                        <strong>alert!</strong> {{this}}
                                        <button type="button" class="close" style="line-height: 1;" data-dismiss="alert"
                                                aria-label="Close">
                                          <span aria-hidden="true">
                                              &times;
                                          </span>
                                        </button>
                                    </div>
                                {{/each}}
                            </div>
                        {{/if }}
                        <div class="card-header text-center">
                            <h3 class="card-title title-up">Reset Password successfull</h3>
                        </div>
                        <div class="card-body">
                            Please try to login with same account using new password !
                        </div>
                        <div class="card-footer text-center">
                            <input type="hidden" name="_csrf" value="{{csrfToken}}">
                            <a href="/users/login" class="btn btn-neutral btn-round btn-lg">Visit Login page<i
                                    class="fa fa-arrow-right" aria-hidden="true"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{>footer}}
